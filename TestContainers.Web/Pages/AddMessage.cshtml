@page
@model TestContainers.Web.Pages.AddMessageModel
@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="Message.Subject"></label>
        <input asp-for="Message.Subject" class="form-control" />
        <span asp-validation-for="Message.Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message.Content"></label>
        <textarea asp-for="Message.Content" class="form-control"></textarea>
        <span asp-validation-for="Message.Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Message</button>
</form>
