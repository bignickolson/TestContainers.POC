@page "{id:int}"
@model TestContainers.Web.Pages.MessageModel
@{
}

@{
    ViewData["Title"] = "Message";
}

<div class="text-center">
    <h1 class="display-4">Message</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <h2 id="message-subject">@Model.Message.Subject</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p id="message-content">@Model.Message.Content</p>
        </div>
    </div>
</div>
